@using ETicaret_MVC.Entities;
@model Product
@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container pt-3">
    <div class="row">
        <div class="col-md-6" >
            <img src="~/Upload/@Model.Image" class="img-responsive w-100 h-75" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if(Model.IsActive){
                        <span class="badge badge-secondary">( @Model.StockAmount adet ürün mevcut.)</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta yok</span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h4 id="product-price" style="font-size:28px;
                     color:orangered;">
                        @Model.Price TL
                    </h4>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">

                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i => i.Id)
                     <button type="submit" class="btn btn-success">
                        <i class="fas fa-shopping-cart"></i>
                        Sepete Ekle
                     </button>
                    }

                </div>

        </div>

    </div>
</div>
