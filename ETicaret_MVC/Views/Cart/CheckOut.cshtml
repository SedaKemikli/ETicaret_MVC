@model ETicaret_MVC.Models.ShippingDetails
@{
    ViewBag.Title = "CheckOut";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen aşağıdaki bilgileri doldurunuz.</p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <label for="input1" class="col-sm-2 col-form-label">Ad Soyad</label> 
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
                        <span class="badge badge-danger">
                            @User.Identity.Name
                        </span>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input2" class="col-sm-2 col-form-label">Adres Başlığı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.AdresBaslıgı, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input3" class="col-sm-2 col-form-label">Adres Tarifi</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input4" class="col-sm-2 col-form-label">Şehir</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input5" class="col-sm-2 col-form-label">İlçe</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Ilce, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input6" class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input7" class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input8" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-warning">Siparişi Bitir</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
