@model ETicaret_MVC.Models.Cart
@{
    ViewBag.Title = "Index";
}
<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Alışveriş Sepeti</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>  </th>
                            <th>Adet</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Toplam Fİyat</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {
                            <tr>
                                <td>
                                    <img src="~/Upload/@item.Product.Image" width="50" />
                                </td>

                                <td>
                                    @item.Quantity
                                </td>

                                <td>
                                    @item.Product.Name
                                </td>

                                <td>
                                    @item.Product.Price
                                </td>

                                <td>
                                    @((item.Product.Price * item.Quantity).ToString("c"))
                                </td>
                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Product.Id);
                                    <button type="submit" class="btn btn-danger">
                                        <i class="far fa-trash-alt"></i>
                                        Sil
                                    </button>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>
                                @Model.Total().ToString("c")
                            </td>
                        </tr>
                    </tfoot>
                </table>
                <div class="text-right">
                    <a href="/Home/List" class="btn btn-outline-primary"><i class="fas fa-angle-double-left"></i>Alışverişe Devam Et</a>
                    
                    <a href="/Cart/Checkout" class="btn btn-outline-primary"><i class="fas fa-check"></i>Siparişi Tamamla</a>
                </div>
             }
             else
             {
                 <div class="alert alert-dark" role="alert">
                     Sepetinizde ürün bulunmamaktadır!
                 </div>
             }
        </div>
    </div>
</div>

